<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoogleMaps.Bindings.Views.MainPage"
             Title="Menu">
    <ScrollView>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Button Text="Visible Region" Clicked="NavigateVisibleRegion" />
            <Button Text="Pins" Clicked="NavigatePins"/>
            <Button Text="Polylines" Clicked="NavigatePolylines"/>
            <Button Text="Polygons" Clicked="NavigatePolygons"/>
            <Button Text="Circles" Clicked="NavigateCircles"/>
            <Button Text="TileLayers" Clicked="NavigateTileLayers"/>
            <Button Text="GroundOverlays" Clicked="NavigationGroundOverlays"/>
            <Button Text="MapLongClicked" Clicked="NavigationMapLongClicked"/>
            <Button Text="Move Camera" Clicked="MoveCameraClicked"/>
            <Button Text="Animate Camera" Clicked="AnimateCameraClicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>